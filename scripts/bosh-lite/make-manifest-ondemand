#!/bin/bash

set -eux

disable_interruptor_override=""

if [[ "${DISABLE_INTERRUPTOR}" == true ]]; then
    disable_interruptor_override="-o ./cf-mysql-release/manifest-generation/bosh2.0/overrides/disable-interruptor.yml"
fi

gobosh interpolate \
    ./cf-mysql-release/manifest-generation/cf-mysql-template-v2.yml \
    ${disable_interruptor_override} \
    -l ./cf-mysql-release/manifest-generation/bosh2.0/bosh-lite/default-vars.yml \
    > "${OUTPUT_FILE}"