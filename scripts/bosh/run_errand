#!/bin/bash

set -eux

my_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
ci_dir="$( cd "${my_dir}/../../" && pwd )"
WORKSPACE_DIR="$( cd "${ci_dir}/../" && pwd )"

source "${ci_dir}/scripts/utils.sh"

: "${ENV_TARGET_FILE:?}"
: "${ERRAND:?}"
: "${DEPLOYMENT_NAME:?}"

BOSH_ENVIRONMENT="$(cat "${ENV_TARGET_FILE}")"
BOSH_ENVIRONMENT="$(sslip_from_ip "${BOSH_ENVIRONMENT}")"
export BOSH_ENVIRONMENT

BOSH_USER=${BOSH_USER:-"$(jq_val "bosh_user" "${ENV_METADATA}")"}
export BOSH_USER

BOSH_PASSWORD=${BOSH_PASSWORD:-"$(jq_val "bosh_password" "${ENV_METADATA}")"}
export BOSH_PASSWORD


if [[ -z "${BOSH_CA_CERT_PATH}" ]]; then
    ENV_SHORT_NAME="$(jq_val "env" "${ENV_METADATA}")"
    BOSH_CA_CERT="${WORKSPACE_DIR}/${ENV_REPO}/${ENV_SHORT_NAME}/certs/rootCA.pem"}
else
    BOSH_CA_CERT=${BOSH_CA_CERT_PATH}
fi
export BOSH_CA_CERT

BOSH_DEPLOYMENT="${DEPLOYMENT_NAME}"
export BOSH_DEPLOYMENT

gobosh \
    -n \
    run-errand \
    "${ERRAND}"
